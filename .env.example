# Nothingâ„¢ Environment Configuration Template
# Copy this file to .env and configure your values

# Core Nothing API
NOTHING_API_KEY=your_nothing_api_key_here
NOTHING_SECRET=your_secret_key

# Database Configuration
DB_HOST=localhost
DB_USER=nothing_user
DB_PASSWORD=your_database_password
DB_NAME=nothing_production

# Third Party Integrations
STRIPE_KEY=sk_test_your_stripe_key
GITHUB_TOKEN=your_github_token
OPENAI_API_KEY=sk-your-openai-key

# Deployment Settings
DEPLOY_TARGET=production
ENVIRONMENT=production
DEBUG=false

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn
ANALYTICS_ID=your_analytics_id
NEW_RELIC_KEY=your_newrelic_key

# Social Media Integration
TWITTER_API_KEY=your_twitter_key
FACEBOOK_APP_ID=your_facebook_app_id

# Email Service
SENDGRID_API_KEY=your_sendgrid_key
MAILGUN_KEY=your_mailgun_key

# Cloud Storage
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
S3_BUCKET=your_s3_bucket_name

# Security Keys
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_SOMETHING=true
DISABLE_NOTHING=false
FEATURE_EVERYTHING=enabled

# ShadeSec Integration
SHADESEC_API_KEY=your_shadesec_key
SHADESEC_WEBHOOK=https://api.shadesec.com/webhooks/your_endpoint

# Nothing-specific Configuration
NOTHING_VERSION=0.0.0
NOTHING_PHILOSOPHY=true
EMBRACE_THE_VOID=true